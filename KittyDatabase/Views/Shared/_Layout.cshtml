<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Save the Kitty | @ViewData["Title"]</title>
    <script type="text/javascript" src="~/js/nav.js"></script>
    @RenderSection("Scripts", required: false)

    <link rel="stylesheet" href="~/css/main.css" type="text/css">

</head>
<body>
    <nav>

        <div class="mobileMenuButton" id="menuButton" onclick="openSidebar();">
            <a href="javascript:void(0);" style="color: black">&#9776;</a>
        </div>

        <div id="sidebar" class="sidebar expanded">
            <div class="flex">
                <span class="spacer"></span>
                <div class="closeButton">
                    <a href="javascript:void(0)" onclick="closeSidebar()" class="nav">X</a>
                </div>
            </div>

            <p>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav">Play</a><br />
            </p>
            <p>
                <a asp-area="" asp-controller="Home" asp-action="HighScores" class="nav">High Scores</a>
            </p>
        </div>

    </nav>
    <div class="title">Save the Kitty: @ViewData["Title"]</div>
    <div>
        @RenderBody()
    </div>

</body>
</html>
